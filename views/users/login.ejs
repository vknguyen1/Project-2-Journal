<%- include('../partials/head') %>
<%- include('../partials/header') %>
<h1>Login</h1>
<% if(err) { %>
    <p style="color: red; margin: 1rem" >
        <%= err %>
    </p>
<% } %>
<form action="/users/login" method="POST">
    <label for="email">
        Email 
        <input type="email" name="email" id="email" placeholder="johnDoe@email.com" autofocus required>
    </label>
    <label for="password">
        Password 
        <input type="password" name="password" placeholder="abc123" id="password" required>
    </label>
    <label for="submit">
        <input class="button" type="submit" id="submit" value="Login">
    </label>
</form>
<div class="redirect">
    <p>Don't have an account?</p>
    <a class="button" href="/users/signup">Signup</a>
</div>
<%- include('../partials/footer') %>